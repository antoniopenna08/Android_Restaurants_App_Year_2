<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Please enter your SIGN UP details."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nameOwnerRegWrapper"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColorHint="#000000">

            <EditText
                android:id="@+id/etNameOwnerReg"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@drawable/round_text_reg"
                android:ems="10"
                android:hint="Owner Name"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:textSize="20sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/emailOwnerRegWrapper"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@id/nameOwnerRegWrapper"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:textColorHint="#000000">

            <EditText
                android:id="@+id/etEmailOwnerReg"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@drawable/round_text_reg"
                android:ems="10"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                android:textSize="20sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/passwordOwnerRegWrapper"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@id/emailOwnerRegWrapper"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:textColorHint="#000000">

            <EditText
                android:id="@+id/etPasswordOwnerReg"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@drawable/round_text_reg"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:textSize="20sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/confPasswordOwnerRegWrapper"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@id/passwordOwnerRegWrapper"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:textColorHint="#000000">

            <EditText
                android:id="@+id/etConfPassOwnerReg"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@drawable/round_text_reg"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:textSize="20sp" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnOwnerReg"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@id/confPasswordOwnerRegWrapper"
            android:layout_below="@id/confPasswordOwnerRegWrapper"
            android:layout_marginTop="25dp"
            android:background="@drawable/round_left"
            android:text="REGISTER"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCancelOwnerReg"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_alignRight="@id/confPasswordOwnerRegWrapper"
            android:layout_below="@id/confPasswordOwnerRegWrapper"
            android:layout_marginTop="25dp"
            android:background="@drawable/round_right"
            android:text="CANCEL"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLogInOwner"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_below="@id/btnOwnerReg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="Already registered/Please LOG IN"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>

</ScrollView>

