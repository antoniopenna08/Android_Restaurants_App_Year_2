<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="35dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="Enter Restaurant details"
        android:textSize="28sp"
        android:textColor="@android:color/black"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/RestNameWrapper"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:textColorHint="#000000"
        android:layout_below="@id/textView1"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/etRestName"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/round_text_reg"
            android:textSize="20sp"
            android:ems="10"
            android:paddingLeft="5dp"
            android:textColorHint="#000000"
            android:hint="Restaurant Name"
            android:inputType="textPersonName"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/RestAddressWrapper"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/RestNameWrapper"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:textColorHint="#000000">

        <EditText
            android:id="@+id/etRestAddress"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/round_text_reg"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPersonName"
            android:paddingLeft="5dp"
            android:textSize="20sp" />
    </android.support.design.widget.TextInputLayout>

</RelativeLayout>