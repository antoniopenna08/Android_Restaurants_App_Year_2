<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.danut.restaurant.ImageActivity">

    <TextView
        android:id="@+id/tvRestNameCustomer"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="90dp"
        android:layout_marginTop="5dp"
        android:text="Text View"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold|italic"/>

    <TextView
        android:id="@+id/tvRestMenusCustomer"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Menus"
        android:textSize="18sp"
        android:layout_below="@id/tvRestNameCustomer"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="380dp"
        android:layout_height="400dp"
        android:layout_below="@id/tvRestMenusCustomer"/>

</RelativeLayout>